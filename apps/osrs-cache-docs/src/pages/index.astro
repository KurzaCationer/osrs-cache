---
import '../index.css';
import { css } from '../styled-system/css';

const container = css({
  padding: '4',
  fontSize: '2xl',
  fontWeight: 'bold',
  color: 'brand'
});
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>OSRS Cache Docs</title>
	</head>
	<body>
		<div class={container}>OSRS Cache Research Docs</div>
        <div class={css({ mt: '4', display: 'flex', flexDirection: 'column', gap: '2' })}>
          <p>This project uses the shared UI preset for styling.</p>
          <a href="/getting-started" class={css({ 
            color: 'brand', 
            textDecoration: 'underline',
            _hover: { color: 'brand.muted' }
          })}>
            Go to Getting Started
          </a>
        </div>
	</body>
</html>